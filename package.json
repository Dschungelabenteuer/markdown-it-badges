{
  "name": "markdown-it-badges",
  "type": "module",
  "version": "1.0.0",
  "description": "An easy way of adding badges to your markdown content",
  "author": "Charles Gruenais",
  "license": "MIT",
  "homepage": "https://github.com/Dschungelabenteuer/markdown-it-badges/tree/main/#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dschungelabenteuer/markdown-it-badges",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/Dschungelabenteuer/markdown-it-badges/issues"
  },
  "keywords": [
    "markdown-it",
    "markdown-it-plugin",
    "markdown",
    "documentation",
    "tokens",
    "tag",
    "tags",
    "label",
    "labels",
    "chip",
    "chips",
    "badge",
    "badges"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "publishConfig": {
    "types": "./dist/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "tsup --watch",
    "build": "tsup --minify",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier . --write",
    "check": "pnpm format && pnpm lint && pnpm test",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only"
  },
  "peerDependencies": {
    "markdown-it": "^13.0.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.0",
    "@types/markdown-it": "^12.2.3",
    "@vitest/coverage-c8": "^0.31.4",
    "@yungezeit/eslint-config-typescript": "^0.0.10",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.8.0",
    "markdown-it": "^13.0.1",
    "prettier": "^2.8.7",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3",
    "vitest": "^0.31.1"
  }
}
